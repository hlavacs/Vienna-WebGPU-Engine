{
    "configurations": [
        {
            "name": "Win64 MSVC (Debug)",
            "includePath": [
                "${workspaceFolder}/external/glm",
                "${workspaceFolder}/external/SDL/include",
                "${workspaceFolder}/include"
            ],
            "cStandard": "c17",
            "cppStandard": "c++17",
            "intelliSenseMode": "windows-msvc-x64",
            "compileCommands": [
                "${workspaceFolder}/examples/build/Windows/Debug/compile_commands.json"
            ]
        },
        {
            "name": "Emscripten (Debug)",
            "includePath": [
                "${workspaceFolder}/external/glm",
                "${workspaceFolder}/include",
                "${env:EMSDK}/upstream/emscripten/cache/sysroot/include",
                "${env:EMSDK}/upstream/emscripten/cache/sysroot/include/SDL2"
            ],
            "cStandard": "c17",
            "cppStandard": "c++17",
            "compilerPath": "${env:EMSDK}/upstream/emscripten/em++",
            "intelliSenseMode": "windows-clang-x64",
            "compileCommands": [
                "${workspaceFolder}/examples/build/Emscripten/Debug/compile_commands.json"
            ]
        }
    ],
    "version": 4
}