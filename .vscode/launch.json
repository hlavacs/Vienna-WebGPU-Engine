{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Tutorial (Debug)",
            "type": "${os:windows?cppvsdbg:cppdbg}",
            "request": "launch",
            "program": "${workspaceFolder}/examples/build/tutorial/${os:windows?Windows:Linux}/Debug/Tutorial${os:windows?.exe:}",
            "symbolSearchPath": "${workspaceFolder}/examples/build/tutorial/${os:windows?Windows:Linux}/Debug",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "preLaunchTask": "Build Example: Tutorial (Debug)",
            "linux": {
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            }
        },
