        {
            "name": "Emscripten (Debug)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8080/examples/emscripten/build/Emscripten/Debug/WebGPU_Engine.html",
            "webRoot": "${workspaceFolder}",
            "runtimeExecutable": "C:/Program Files/BraveSoftware/Brave-Browser/Application/brave.exe",
            "runtimeArgs": [
                "--remote-debugging-port=9222"
            ],
            "sourceMaps": true,
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "outputCapture": "std",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "start server",
            "postDebugTask": "stop server"
        }
    ]
